{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "PROGRESS_FILE=\"$HOME/.claude/projects/-Users-admin-Developer-AEGIS/memory/session-progress.md\" && TIMESTAMP=$(date '+%Y-%m-%d %H:%M') && echo \"- [$TIMESTAMP] $CLAUDE_NOTIFICATION\" >> \"$PROGRESS_FILE\""
          }
        ]
      }
    ]
  }
}
