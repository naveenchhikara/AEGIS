# =============================================================================
# AEGIS Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
#
# All secrets use CHANGE_ME_* placeholders — replace before any deployment.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL 16)
# -----------------------------------------------------------------------------
POSTGRES_USER=aegis
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=aegis
POSTGRES_PORT=5433

# Connection string (used by Prisma / app)
# Note: In Docker Compose production, host is "postgres" (service name), port 5432
# For local dev with Docker, host is "localhost", port 5433 (mapped)
DATABASE_URL=postgresql://aegis:CHANGE_ME_IN_PRODUCTION@localhost:5433/aegis

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# AWS S3 Evidence Storage (Mumbai region — RBI data localization)
# -----------------------------------------------------------------------------
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=CHANGE_ME_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_ME_IN_PRODUCTION
S3_BUCKET_NAME=aegis-evidence-dev

# -----------------------------------------------------------------------------
# AWS SES Email (Mumbai region — RBI data localization)
# -----------------------------------------------------------------------------
# Domain aegis.in must be verified in SES console with DKIM, SPF, and DMARC DNS records.
# Request SES production access to send to non-verified addresses.
AWS_SES_REGION=ap-south-1
SES_FROM_EMAIL=noreply@aegis.in

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Set to "1" to skip env validation (e.g., Docker build without secrets)
SKIP_ENV_VALIDATION=
